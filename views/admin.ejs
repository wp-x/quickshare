<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <!-- 头部导航 -->
        <header class="admin-header">
            <div class="header-content">
                <h1><i class="fas fa-cogs"></i> HTML-Go 管理面板</h1>
                <div class="header-actions">
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-home"></i> 返回首页
                    </a>
                    <a href="/logout" class="btn btn-danger">
                        <i class="fas fa-sign-out-alt"></i> 退出登录
                    </a>
                </div>
            </div>
        </header>

        <!-- 统计卡片 -->
        <section class="stats-section">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-file-code"></i>
                    </div>
                    <div class="stat-content">
                        <h3 id="total-pages">-</h3>
                        <p>总页面数</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="stat-content">
                        <h3 id="protected-pages">-</h3>
                        <p>受保护页面</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-day"></i>
                    </div>
                    <div class="stat-content">
                        <h3 id="today-pages">-</h3>
                        <p>今日新增</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-week"></i>
                    </div>
                    <div class="stat-content">
                        <h3 id="recent-pages">-</h3>
                        <p>最近7天</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- 页面管理 -->
        <section class="pages-section">
            <div class="section-header">
                <h2><i class="fas fa-list"></i> 页面管理</h2>
                <div class="section-actions">
                    <div class="search-box">
                        <input type="text" id="search-input" placeholder="搜索页面ID或内容...">
                        <button id="search-btn" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <button id="batch-delete-btn" class="btn btn-danger" disabled>
                        <i class="fas fa-trash"></i> 批量删除
                    </button>
                </div>
            </div>

            <!-- 页面列表 -->
            <div class="pages-table-container">
                <table class="pages-table">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="select-all">
                            </th>
                            <th>页面标题</th>
                            <th>页面ID</th>
                            <th>类型</th>
                            <th>保护状态</th>
                            <th>访问密码</th>
                            <th>创建时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="pages-tbody">
                        <!-- 页面数据将通过JavaScript加载 -->
                    </tbody>
                </table>
            </div>

            <!-- 分页 -->
            <div class="pagination-container">
                <div class="pagination-info">
                    <span id="pagination-info">显示第 1-10 条，共 0 条记录</span>
                </div>
                <div class="pagination">
                    <button id="prev-page" class="btn btn-secondary" disabled>
                        <i class="fas fa-chevron-left"></i> 上一页
                    </button>
                    <span id="page-numbers"></span>
                    <button id="next-page" class="btn btn-secondary" disabled>
                        下一页 <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </section>
    </div>

    <!-- 确认删除模态框 -->
    <div id="delete-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3><i class="fas fa-exclamation-triangle"></i> 确认删除</h3>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <p id="delete-message">确定要删除这个页面吗？此操作不可撤销。</p>
            </div>
            <div class="modal-footer">
                <button id="confirm-delete" class="btn btn-danger">确认删除</button>
                <button id="cancel-delete" class="btn btn-secondary">取消</button>
            </div>
        </div>
    </div>

    <!-- 加载提示 -->
    <div id="loading" class="loading">
        <div class="loading-spinner"></div>
        <p>加载中...</p>
    </div>

    <!-- 消息提示 -->
    <div id="message" class="message"></div>

    <script src="/js/admin.js"></script>
</body>
</html> 